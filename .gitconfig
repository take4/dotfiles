[core]
    excludesfile = ~/.gitignore
    editor = vim
    precomposeunicode = true
    quotepath = true
[include]
    path = ~/.gitconfig.local
[color]
	ui = true
[push]
	default = simple
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    pu = push
    mg = merge
    mgnff = merge --no-ff
    mgs = merge --squash
    re = rebase
    di = diff
    dic = diff --cached
    pick = cherry-pick
